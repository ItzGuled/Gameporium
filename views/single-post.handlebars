<div>        
    <div class="game-container">        
        <h2 class="game-title">{{game.name}}</h2>
        {{#if game.description}}
        {{{game.description}}}
        {{else}}
        <p>{{game.deck}}</p>
        {{/if}}
        <img src="{{game.image.icon_url}}" alt="Game image"/>        
</div>
<form class="comment-page">
  <div>
    <textarea name="comment-section"></textarea>
  </div>
  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>

{{#if loggedIn}}
    <script src="/javascript/comment.js"></script>
{{/if}}
