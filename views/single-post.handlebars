
<div >        
    <div class="game-container">        
        <h2 class="game-title">{{game.name}}</h2>
        {{#if game.description}}
        {{{game.description}}}
        {{else}}
        <p>{{game.deck}}</p>
        {{/if}}
        <img src="{{game.image.medium_url}}" alt="Game image"/>               
    </div>        
</div>