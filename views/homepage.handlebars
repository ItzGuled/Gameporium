<div >    
    {{#each games as |game|}}
        <div class="game-container">        
            <a href="/{{game.guid}}"style="text-decoration:none;"><h2 class="game-title">{{game.name}}</h2></a>
            {{#if game.deck}}
            <p>{{game.deck}}</p>            
            {{else}}
            {{{game.description}}}
            {{/if}}             
            <div class="game-image"><img src="{{game.image.icon_url}}" alt="Game image"/> </div>              
        </div>
    {{/each}}    
</div>